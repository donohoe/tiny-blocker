{
	"name":        "Tiny Blocker",
	"version":     "0.0.0.1",
	"description": "The tiny but powerful blocker on the web. Hold me closer Tiny Blocker.",
	"manifest_version": 2,
	"icons": {
		"128": "img/icon_128.png"
	},
	"permissions": [
		"<all_urls>",
		"webRequest",
		"webRequestBlocking",
		"tabs",
		"storage"
	],
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"content_scripts": [
		{ 
			"matches": [ "<all_urls>" ],
			"js":  [ "app.js" ],
			"run_at": "document_start",
			"all_frames": false
		},
		{
			"matches": [ "<all_urls>" ],
			"css": [ "style.css" ],
			"run_at": "document_end",
			"all_frames": false
		}
	]
}
